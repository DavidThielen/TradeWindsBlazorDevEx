@using TradeWindsBlazorDevEx.Utilities

<div class="dxbl-row">
	<DxComboBox @bind-Value="@Value.CountryCode"
			    Data="CountryInfo.SortByCode"
			    TValue="int"
			    TData="CountryInfo"
			    SelectedItemChanged="OnCountryCodeChanged"
			    TextFieldName="@nameof(CountryInfo.TextCountryCode)"
			    ValueFieldName="@nameof(CountryInfo.PhoneCountryCode)"
			    ReadOnly="@ReadOnly"
			    InputId="phone.code"
			    name="@nameof(Value.CountryCode)"
			    autocomplete="tel-country-code"
			    AllowUserInput="false"
			    ListRenderMode="ListRenderMode.Entire"
			    ShowValidationIcon="true"
			    FilteringMode="DataGridFilteringMode.Contains"
			    CssClass="border-r-0 rounded-br-0 rounded-tr-0 dxbl-col-xs-5"/>
	<DxTextBox Text="@Value.NationalNumber"
			    TextExpression="@(() => Value.NationalNumber)"
			    TextChanged="OnNumberChanged"
			    ReadOnly="@ReadOnly"
			    InputId="phone"
			    name="@nameof(Value.NationalNumber)"
			    spellcheck="false"
			    autocomplete="tel-national"
			    ShowValidationIcon="true"
			    CssClass="rounded-bl-0 rounded-tl-0  dxbl-col-xs-7" />
</div>
