 @inherits ComponentBase

<CascadingValue Value="this" IsFixed="true">
	@ChildContent
</CascadingValue>

@* this is a generic message box used for status and informational messages *@
<DxPopup @ref="MessageBoxPopup"
		 AllowDrag="true"
         HeaderText="@HeaderText"
         ShowFooter="true"
         ShowCloseButton="true"
         CloseOnEscape="true"
         CloseOnOutsideClick="false"
         Visible="false"
		 ZIndex="2147483647"
         Closed="@PopupClosed">
	<BodyContentTemplate>
		@(new MarkupString(MessageHtml))
	</BodyContentTemplate>
	<FooterContentTemplate>
		<DxButton RenderStyle="ButtonRenderStyle.Primary"
		          Text="@(ButtonText[0])"
		          Visible="@(ButtonVisible[0])"
		          Click="@Button0Click"/>
		<DxButton RenderStyle="ButtonRenderStyle.Secondary"
		          Text="@(ButtonText[1])"
		          Visible="@(ButtonVisible[1])"
		          Click="@Button1Click"/>
		<DxButton RenderStyle="ButtonRenderStyle.Secondary"
		          Text="@(ButtonText[2])"
		          Visible="@(ButtonVisible[2])"
		          Click="@Button2Click"/>
		<DxButton RenderStyle="ButtonRenderStyle.Secondary"
		          Text="@(ButtonText[3])"
		          Visible="@(ButtonVisible[3])"
		          Click="@Button3Click"/>
	</FooterContentTemplate>
</DxPopup>